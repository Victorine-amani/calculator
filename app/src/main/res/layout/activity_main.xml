<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholetable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E2E2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etInput2"
        android:layout_width="169dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/column1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etInput1"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etInput1"
        android:layout_width="169dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="48dp"
        android:background="@color/white"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/column1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableRow
        android:id="@+id/column1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etInput2">


        <Button
            android:id="@+id/btn1"
            android:layout_width="66dp"
            android:layout_height="64dp"
            android:backgroundTint="#9C9C9C"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:backgroundTint="#9C9C9C"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:backgroundTint="#9C9C9C"
            android:text="*"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="57dp"
            android:layout_height="64dp"
            android:backgroundTint="#9C9C9C"
            android:text="%"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </TableRow>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="466dp"
        android:background="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/column1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="439dp"
        android:backgroundTint="#FF5722"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/column1" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="209dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="507dp"
        android:backgroundTint="#FF5722"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnResult"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/column1"
        app:layout_constraintVertical_bias="0.158" />


</androidx.constraintlayout.widget.ConstraintLayout>